<h3>Comments</h3>
<% @post.comments.each do |comment| %>
    <div class="card">
        <div class="card-header">
            <p><strong><%= comment.username %></strong>: <%= comment.body %>
            <%= link_to "[x]", [comment.post, comment], method: :delete, data: {confirm: 'Are you sure?'} %>
            </p>
        </div>
    </div>
<% end %>